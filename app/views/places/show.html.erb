<h1><%= @place.name %></h1>

<h2>Your Entries</h2>
<%= link_to "Add Entry", new_place_entry_path(@place), class: "btn btn-success mb-3" %>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <% if entry.image.attached? %>
          <%= image_tag url_for(entry.image), class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry.title %></h5>
          <p class="card-text"><%= entry.description %></p>
          <p class="card-text"><small class="text-muted">Occurred on: <%= entry.occurred_on %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
