<h1>New Entry for <%= @place.name %></h1>
<%= form_with model: [@place, @entry], local: true, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :occurred_on %>
    <%= f.date_field :occurred_on, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :image, "Upload Image (optional)" %>
    <%= f.file_field :image, accept: "image/png,image/gif,image/jpeg", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.submit "Create Entry", class: "btn btn-primary" %>
  </div>
<% end %>
